<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <com.trx.news.view.NoScrollViewPager
        android:id="@+id/vp_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <RadioGroup 
        android:id="@+id/rg_bottom"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_tab_bg"
        android:gravity="center"
        >
        
        <RadioButton
            android:id="@+id/btn_home"
            android:text="首页"
            android:drawableTop="@drawable/selector_main_home" 
            style="@style/TabStyle"	
            android:checked="true"		            
            />
        <RadioButton
            android:id="@+id/btn_news"
            android:text="新闻中心"
            android:drawableTop="@drawable/selector_main_news" 
            style="@style/TabStyle"			            
            />
        <RadioButton
            android:id="@+id/btn_smart"
            android:text="智慧服务"
            android:drawableTop="@drawable/selector_main_smart" 
            style="@style/TabStyle"			            
            />
        <RadioButton
            android:id="@+id/btn_gov"
            android:text="电子政务"
            android:drawableTop="@drawable/selector_main_gov" 
            style="@style/TabStyle"			            
            />
        <RadioButton
            android:id="@+id/btn_setting"
            android:text="设置"
            android:drawableTop="@drawable/selector_main_setting" 
            style="@style/TabStyle"			            
            />
        
    </RadioGroup>
</LinearLayout>
